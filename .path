#!/usr/bin/env zsh
# Add things to the `$PATH`

# for python
if [[ -n "$HOMEBREW_PREFIX" ]]; then
  export PATH="$HOMEBREW_PREFIX/opt/python@3.12/libexec/bin:$PATH"
fi
if command -v python3 &> /dev/null; then
  export PATH="$PATH:$(python3 -m site --user-base)/bin"
fi

# for google cloud sdk (after python code above)
export CLOUDSDK_PYTHON="${HOMEBREW_PREFIX:-/usr/local}/opt/python@3.12/libexec/bin/python3"

# for deno
export PATH="$PATH:$HOME/.deno/bin"

# bun
export PATH="$PATH:$HOME/.bun/bin"

# pnpm
export PNPM_HOME="$HOME/Library/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PATH:$PNPM_HOME" ;;
esac
# pnpm end

# for go
export PATH="$PATH:$HOME/go/bin"

# for rust (only source if not already loaded via .zshenv)
if [[ -z "$CARGO_HOME" ]] && [ -f "$HOME/.cargo/env" ]; then
  . "$HOME/.cargo/env"
fi

# for claude
export PATH="$HOME/.local/bin:$PATH"